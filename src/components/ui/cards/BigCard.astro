---

interface Props {
  title: string;
  text: string;
}
// Define props from Astro
const { title, text } = Astro.props;
---

    <div class="bg-neutral-200 dark:bg-neutral-800 p-6 rounded-xl shadow-own shadow-neutral-300 dark:shadow-neutral-900">
        
        <div class="grow">
            <h3 class="text-2xl font-bold text-neutral-800 dark:text-neutral-200">
                {title}
            </h3>
        <!-- Content text of the section -->
        <p class="mt-4 ml-3 text-pretty text-neutral-700 dark:text-neutral-300" set:html={text}/>
        </div>
    </div>

