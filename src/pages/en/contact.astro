---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE, TEXTS } from "@data/constants";

const lang = Astro.currentLocale as keyof typeof TEXTS;

const pageTitle: string = `Contact | ${SITE(lang).title}`;

const texts = TEXTS[lang];
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `https://certainWager.com/${lang}/contact`,
    "url": `https://certainWager.com/${lang}/contact`,
    "name": "Contact Us | CertainWager",
    "description": texts.contactDescription,
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://certainWager.com",
      "name": "CertainWager",
      "description": texts.heroSubtitle,
        
    },
    "inLanguage": lang
  }}
>
  <ContactSection />
</MainLayout>
